{
  "name": "integrated-learning-environment",
  "displayName": "Integrated Learning Environment",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.67.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:LEARNME.toml"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "integratedLearningEnvironment",
          "name": "Integrated Learning Environment"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "integratedLearningEnvironment.refreshData",
          "when": "view == integratedLearningEnvironment",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "integratedLearningEnvironment.viewCourseItem",
          "when": "view == integratedLearningEnvironment",
          "group": "inline"
        }
      ]
    },
    "commands": [
      {
        "command": "integratedLearningEnvironment.refreshData",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "integratedLearningEnvironment.viewCourseItem",
        "title": "View Course Item",
        "icon": "$(link-external)"
      },
      {
        "command": "integratedLearningEnvironment.runCourseItemTests",
        "title": "Run Course Item Tests",
        "icon": "$(link-external)"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack --devtool nosources-source-map --config ./build/node-extension.webpack.config.js",
    "watch": "webpack --watch --devtool nosources-source-map --config ./build/node-extension.webpack.config.js",
    "package": "webpack --mode production --config ./build/node-extension.webpack.config.js",
    "test-compile": "tsc -p ./",
    "test-watch": "tsc -watch -p ./",
    "pretest": "npm run test-compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/markdown-it": "^12.2.3",
    "@types/mocha": "^8.0.0",
    "@types/node": "^20.5.8",
    "@types/vscode": "^1.81.0",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "eslint": "^8.48.0",
    "glob": "^10.3.4",
    "ts-loader": "^9.4.4",
    "typescript": "^5.2.2",
    "vscode-test": "^1.4.0",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@iarna/toml": "^2.2.5",
    "handlebars": "^4.7.8",
    "markdown-it": "^13.0.1",
    "mocha": "^10.2.0",
    "tap-parser": "^13.0.2-1"
  }
}
